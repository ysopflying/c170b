<PropertyList>
    
    <!-- ============================================================== -->
    <!-- Magnetos                                                       -->
    <!-- ============================================================== -->

    <filter>
        <name>Engine Magnetos</name>
        <type>gain</type>
        <input>
            <property>/controls/switches/magnetos</property>
        </input>
        <output>
            <property>/controls/engines/engine/magnetos</property> 
        </output>
    </filter>

    <filter>
        <name>fuel flow</name>
        <type>gain</type>
        <input>
            <condition>
                <equal-to> 
                    <property>/controls/fuel/tank[0]/fuel_selector</property>
                    <value>false</value>
                </equal-to>
            </condition>
            <value>0.0</value>
        </input>
        <output>
            <property>/engines/engine/fuel-flow-gph</property>
        </output>
    </filter>

   <logic>
        <name>fuel tank 1 On/Off</name>
        <input>
            <and>
                <less-than>
                    <property>controls/fuel/fuel-selector</property>
                    <value>3</value>
                </less-than>
                <greater-than>
                    <property>controls/fuel/fuel-selector</property>
                    <value>0</value>
                </greater-than>
            </and>
        </input>
        <output>
            <property>/fdm/jsbsim/propulsion/tank[1]/collector-valve</property>
        </output>
    </logic>
   <logic>
        <name>fuel tank 2 On/Off</name>
        <input>
            <and>
                <less-than>
                    <property>controls/fuel/fuel-selector</property>
                    <value>4</value>
                </less-than>
                <greater-than>
                    <property>controls/fuel/fuel-selector</property>
                    <value>1</value>
                </greater-than>
            </and>
        </input>
        <output>
            <property>/fdm/jsbsim/propulsion/tank[2]/collector-valve</property>
        </output>
    </logic>
	
</PropertyList>
